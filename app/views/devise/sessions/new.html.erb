<div >
  <div class="row">
    <div class="col-md-6 col-md-offset-3 font-conten">
      <div class="row">
        <h1 class="font-title">Iniciar sesión</h1>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= label_tag(:email, "Correo electrónico") %><br />
          <%= f.email_field :email, autofocus: true, placeholder: "Correo electrónico", class: "form-control" %>
        </div>

        <div class="field">
          <%= label_tag(:password, "Contraseña") %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder:"Contraseña", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions field center font-button">
          <%= f.submit "Iniciar", class: "btn let be-black" %>
        </div>
      <% end %>
      <div class="field font-button">
          <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
